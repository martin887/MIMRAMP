{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "AdminUserName": {
        "type": "string",
        "minLength": 1
      },
      "AdminPassword": {
        "type": "securestring"
      },
      "domainName": {
        "type": "string"
      },
      "storageaccount1Type": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "allowedValues": [
          "Standard_LRS",
          "Standard_ZRS",
          "Standard_GRS",
          "Standard_RAGRS",
          "Premium_LRS"
        ]
      },
      "_artifactsLocation": {
        "type": "string",
        "metadata": {
          "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
        },
        "defaultValue": "[deployment().properties.templateLink.uri]"

    
  
  
      },
      "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
          "description": "Auto-generated token to access _artifactsLocation"
        },
        "defaultValue": ""
      }
    },
    "resources": [
      {
        "name": "vnet",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [],
        "tags": {
          "displayName": "vnet"
        },
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[variables('vnetPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[variables('vnetSubnet1Name')]",
              "properties": {
                "addressPrefix": "[variables('vnetSubnet1Prefix')]"
              }
            }
          ]
        }
      },
      {
        "name": "[variables('DC1NicName')]",
        "type": "Microsoft.Network/networkInterfaces",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Network/virtualNetworks/', 'vnet')]",
          "[resourceId('Microsoft.Network/publicIPAddresses', variables('DC1PIPName'))]"
        ],
        "tags": {
          "displayName": "DC1Nic"
        },
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Static",
                "privateIPAddress": "10.0.0.4",
                "subnet": {
                  "id": "[variables('DC1SubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('DC1PIPName'))]"
                }
              }
            }
          ]
        }
      },
      {
        "name": "DC1",
        "type": "Microsoft.Compute/virtualMachines",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Storage/storageAccounts/', variables('storageaccount1Name'))]",
          "[concat('Microsoft.Network/networkInterfaces/', variables('DC1NicName'))]"
        ],
        "tags": {
          "displayName": "DC1"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[variables('DC1VmSize')]"
          },
          "osProfile": {
            "computerName": "DC1",
            "adminUsername": "[parameters('AdminUsername')]",
            "adminPassword": "[parameters('AdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('DC1ImagePublisher')]",
              "offer": "[variables('DC1ImageOffer')]",
              "sku": "2016-Datacenter",
              "version": "latest"
            },
            "osDisk": {
              "name": "DC1OSDisk",
              "vhd": {
                "uri": "[concat('http://', variables('storageaccount1Name'), '.blob.core.windows.net/', variables('DC1StorageAccountContainerName'), '/', variables('DC1OSDiskName'), '.vhd')]"
              },
              "caching": "ReadWrite",
              "createOption": "FromImage"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DC1NicName'))]"
              }
            ]
          }
        },
        "resources": [
          {
            "name": "Microsoft.Powershell.DSC",
            "type": "extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "2016-03-30",
            "dependsOn": [
              "[resourceId('Microsoft.Compute/virtualMachines', 'DC1')]"
            ],
            "tags": {
              "displayName": "DC"
            },
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.9",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "configuration": {
                  "url": "[concat(parameters('_artifactsLocation'), '/', variables('DCArchiveFolder'), '/', variables('DCArchiveFileName'))]",
                  "script": "DC.ps1",
                  "function": "Main"
                },
                "configurationArguments": {
                  "nodeName": "DC1",
                  "domainName": "[parameters('domainName')]",
                  "domainAdminCredentials": {
                    "UserName": "[parameters('adminUserName')]",
                    "Password": "PrivateSettingsRef:Password"
                  }
                },
                "protectedSettings": {
                  "Items": {
                    "Password": "[parameters('adminPassword')]"
                  }
                }
              }
            }
          }
  
  
  
  
  
        ]
      },
      {
        "name": "[variables('storageaccount1Name')]",
        "type": "Microsoft.Storage/storageAccounts",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [],
        "tags": {
          "displayName": "storageaccount1"
        },
        "properties": {
          "accountType": "[parameters('storageaccount1Type')]"
        }
      },
      {
        "name": "[variables('MIMSYNCNicName')]",
        "type": "Microsoft.Network/networkInterfaces",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Network/virtualNetworks/', 'vnet')]",
          "[resourceId('Microsoft.Network/publicIPAddresses', variables('MIMSYNCPIPName'))]"
        ],
        "tags": {
          "displayName": "MIMSYNCNic"
        },
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Static",
                "privateIPAddress": "10.0.0.5",
                "subnet": {
                  "id": "[variables('DC1SubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('MIMSYNCPIPName'))]"
                }
              }
            }
          ]
        }
      },
      {
        "name": "MIMSYNC",
        "type": "Microsoft.Compute/virtualMachines",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Storage/storageAccounts/', variables('storageaccount1Name'))]",
          "[concat('Microsoft.Network/networkInterfaces/', variables('MIMSYNCNicName'))]"
        ],
        "tags": {
          "displayName": "MIMSYNC"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[variables('MIMSYNCVmSize')]"
          },
          "osProfile": {
            "computerName": "MIMSYNC",
            "adminUsername": "[parameters('AdminUsername')]",
            "adminPassword": "[parameters('AdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('MIMSYNCImagePublisher')]",
              "offer": "[variables('MIMSYNCImageOffer')]",
              "sku": "2016-Datacenter",
              "version": "latest"
            },
            "osDisk": {
              "name": "MIMSYNCOSDisk",
              "vhd": {
                "uri": "[concat('http://', variables('storageaccount1Name'), '.blob.core.windows.net/', variables('MIMSYNCStorageAccountContainerName'), '/', variables('MIMSYNCOSDiskName'), '.vhd')]"
              },
              "caching": "ReadWrite",
              "createOption": "FromImage"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('MIMSYNCNicName'))]"
              }
            ]
          }
        }
      },
      {
        "name": "[variables('MIMPORTALNicName')]",
        "type": "Microsoft.Network/networkInterfaces",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Network/virtualNetworks/', 'vnet')]",
          "[resourceId('Microsoft.Network/publicIPAddresses', variables('MIMPORTALPIPName'))]"
        ],
        "tags": {
          "displayName": "MIMPORTALNic"
        },
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Static",
                "privateIPAddress": "10.0.0.6",
                "subnet": {
                  "id": "[variables('DC1SubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('MIMPORTALPIPName'))]"
                }
              }
            }
          ]
        }
      },
      {
        "name": "MIMPORTAL",
        "type": "Microsoft.Compute/virtualMachines",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-06-15",
        "dependsOn": [
          "[concat('Microsoft.Storage/storageAccounts/', variables('storageaccount1Name'))]",
          "[concat('Microsoft.Network/networkInterfaces/', variables('MIMPORTALNicName'))]"
        ],
        "tags": {
          "displayName": "MIMPORTAL"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "[variables('MIMPORTALVmSize')]"
          },
          "osProfile": {
            "computerName": "MIMPORTAL",
            "adminUsername": "[parameters('AdminUsername')]",
            "adminPassword": "[parameters('AdminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "[variables('MIMPORTALImagePublisher')]",
              "offer": "[variables('MIMPORTALImageOffer')]",
              "sku": "2016-Datacenter",
              "version": "latest"
            },
            "osDisk": {
              "name": "MIMPORTALOSDisk",
              "vhd": {
                "uri": "[concat('http://', variables('storageaccount1Name'), '.blob.core.windows.net/', variables('MIMPORTALStorageAccountContainerName'), '/', variables('MIMPORTALOSDiskName'), '.vhd')]"
              },
              "caching": "ReadWrite",
              "createOption": "FromImage"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('MIMPORTALNicName'))]"
              }
            ]
          }
        }
      },
      {
        "name": "DC1PIP",
        "type": "Microsoft.Network/publicIPAddresses",
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-03-30",
        "dependsOn": [],
        "tags": {
          "displayName": "DC1PIP"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "dc1pip"
          }
        }
      },
      {
        "name": "MIMPORTALPIP",
        "type": "Microsoft.Network/publicIPAddresses",
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-03-30",
        "dependsOn": [],
        "tags": {
          "displayName": "MIMPORTALPIP"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "mimportalpip"
          }
        }
      },
      {
        "name": "MIMSYNCPIP",
        "type": "Microsoft.Network/publicIPAddresses",
        "location": "[resourceGroup().location]",
        "apiVersion": "2016-03-30",
        "dependsOn": [],
        "tags": {
          "displayName": "MIMSYNCPIP"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "mimsyncpip"
          }
        }
      }
    ],
    "variables": {
      "vnetPrefix": "10.0.0.0/16",
      "vnetSubnet1Name": "Subnet-1",
      "vnetSubnet1Prefix": "10.0.0.0/24",
      "DC1ImagePublisher": "MicrosoftWindowsServer",
      "DC1ImageOffer": "WindowsServer",
      "DC1OSDiskName": "DC1OSDisk",
      "DC1VmSize": "Standard_D2",
      "DC1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]",
      "DC1SubnetRef": "[concat(variables('DC1VnetID'), '/subnets/', variables('vnetSubnet1Name'))]",
      "DC1StorageAccountContainerName": "vhds",
      "DC1NicName": "[concat('DC1', 'NetworkInterface')]",
      "storageaccount1Name": "[concat('mim', uniqueString(resourceGroup().id))]",
      "MIMSYNCImagePublisher": "MicrosoftWindowsServer",
      "MIMSYNCImageOffer": "WindowsServer",
      "MIMSYNCOSDiskName": "MIMSYNCOSDisk",
      "MIMSYNCVmSize": "Standard_D2",
      "MIMSYNCVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]",
      "MIMSYNCSubnetRef": "[concat(variables('MIMSYNCVnetID'), '/subnets/', variables('vnetSubnet1Name'))]",
      "MIMSYNCStorageAccountContainerName": "vhds",
      "MIMSYNCNicName": "[concat('MIMSYNC', 'NetworkInterface')]",
      "MIMPORTALImagePublisher": "MicrosoftWindowsServer",
      "MIMPORTALImageOffer": "WindowsServer",
      "MIMPORTALOSDiskName": "MIMPORTALOSDisk",
      "MIMPORTALVmSize": "Standard_D2",
      "MIMPORTALVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]",
      "MIMPORTALSubnetRef": "[concat(variables('MIMPORTALVnetID'), '/subnets/', variables('vnetSubnet1Name'))]",
      "MIMPORTALStorageAccountContainerName": "vhds",
      "MIMPORTALNicName": "[concat('MIMPORTAL', 'NetworkInterface')]",
      "DC1PIPName": "DC1PIP",
      "MIMPORTALPIPName": "MIMPORTALPIP",
      "MIMSYNCPIPName": "MIMSYNCPIP",
      "dsDSCArchiveFolder": "DSC",
      "dsDSCArchiveFileName": "dsDSC.zip",
      "dsDSC2ArchiveFolder": "DSC",
      "dsDSC2ArchiveFileName": "dsDSC2.zip",
      "DCArchiveFolder": "DSC",
      "DCArchiveFileName": "DC.zip"
    }
  }