{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
           "type": "string",
           "metadata": {
                "description": "Administrator username"
            }
        },
     "adminPassword": {
        "type": "string",
        "metadata": {
             "description": "Administrator password"
         }
     }  
    },
    "variables": {
        "DCNAME":"dc01",
        "DCPUBLICIP":"dc01",
        "DCNIC":"dc01",
        "VMNET":"myVMNET"
    },
    "resources": [
    {
        "apiVersion": "2018-08-01",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('DCPUBLICIP')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "publicIPAllocationMethod": "Dynamic",
            "dnsSettings": {
                "domainNameLabel": "(variables('DCNAME'))]"
            }
        }
    },
    {
        "apiVersion": "2018-08-01",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[variables('VMNET')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "displayName": "VirtualNetwork"
        },
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
            },
            "subnets": [
                {
                    "name": "MIMVirtualNetwork-Subnet",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2018-08-01",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[variables('DCNIC')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[variables('DCPUBLICIP')]",
            "[variables('VMNET')]"
        ],
        "tags": {
            "displayName": "WindowsVM1 Network Interface"
        },
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Static",
                        "privateIPAddress": "10.0.0.4",
                        "publicIPAddress": {
                            "id": "[variables('DCPUBLICIP')]"
                        },
                        "subnet": {
                            "id": "[concat(resourceId('Microsoft.Network/virtualNetworks/subnets', variables('VMNET'), '/subnets/MIMVirtualNetwork-Subnet'))]"
                        }
                    }
                }
            ]
        }
    },
    {
        "apiVersion": "2018-10-01",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[variables('DCNAME')]",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[variables('DCNIC')]"
        ],

        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_A2"
            },
            "osProfile": {
                "computerName": "[variables('DCNAME')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "MicrosoftWindowsServer",
                    "offer": "WindowsServer",
                    "sku": "2016-Datacenter",
                    "version": "latest"
                },
                "osDisk": {
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('DCNIC'))]"
                    }
                ]
            },
            "diagnosticsProfile": {
                "bootDiagnostics": {
                    "enabled": false,
                    "storageUri": "[concat('http://', toLower('WindowsVM1storage'), '.blob.core.windows.net')]"
                }
            }
        },
        "resources": [
            
        ]
    }],
    "outputs": {}
}